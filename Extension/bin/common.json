{
  "defaults": [
    "cpfe",
    "--wchar_t_keyword",
    "--no_warnings",
    "--rtti",
    "--edge",
    "--exceptions",
    "--error_limit",
    "25000",
    "-D_EDG_COMPILER",
    "-D_USE_DECLSPECS_FOR_SAL=1"
  ],
  "source_file_format": "-f %s",
  "expressions": [
    {
      "match": "^/I(.*)",
      "replace": "-I\n$1"
    },
    {
      "match": "^[-/]external:I(.*)",
      "replace": "-I\n$1"
    },
    {
      "match": "^/D(.*)",
      "replace": "-D$1"
    },
    {
      "match": "^/AI(.*)",
      "replace": "--using_directory\n$1"
    },
    {
      "match": "^/dE--(.*)",
      "replace": "--$1"
    }
  ]
}