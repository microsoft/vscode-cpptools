{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6", "dom"
		],
		"sourceMap": true,
		"rootDir": ".",
		"removeComments": true,
		"noImplicitUseStrict": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"test/**/*.ts",
		"tools/**/*.ts",
		"ui/**/*.ts",
		"./vscode*.d.ts"
	]
}