	"ifnd": {
		"prefix": "ifnd",
		"body": "\r\n#ifndef $1\r\n#define ${1:${TM_FILENAME/(([A-Z])([A-Z][a-z]))|(([a-z])([A-Z]))|([a-z])|(\\.)/\\U(?1:$2_$3)(?4:$5_$6)$7(?8:_)\\E/g}}\r\n\r\n${0}\r\n\r\n#endif // $1\r\n",
