{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "linux": {
        "command": "g++",
        "args": [
          "-g",
          "*.cpp",
          "-lpthread",
          "--std=c++11",
          "-o",
          "fib.out"
        ]
      },
      "osx": {
        "command": "g++",
        "args": [
          "-g",
          "*.cpp",
          "-lpthread",
          "--std=c++11",
          "-o",
          "fib.out"
        ]
      }
    }
  ]
}
